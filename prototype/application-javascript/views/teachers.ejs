<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/menu') %>

    <div class="container">
        <h1 class="py-5">Teachers</h1>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-striped">
                <% for(var i = 0; i < teachers.length; i++) { %>
                <tr>
                    <td><%= teachers[i].attrs.filter(a => a.name === 'firstname')[0].value %></td>
                    <td><%= teachers[i].attrs.filter(a => a.name === 'lastname')[0].value %></td>
                    <td><%= teachers[i].id %></td>
                    <td><a href="/delete-teacher/<%= teachers[i].id %>" class="btn btn-outline-danger float-right">Remove</a></td>
                </tr>
                <% } %>
            </tbody>
        </table>

        <a class="btn btn-primary float-right mt-5" href="/add-teacher" role="button">Add teacher</a>
    </div>
    
    <%- include('partials/script') %>
</body>

</html>